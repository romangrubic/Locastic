{% extends 'base.html.twig' %}

{% block title %}Results index{% endblock %}

{% block body %}
    <h1>Results index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>FullName</th>
                <th>RaceTime</th>
                <th>Placement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in distanceMedium %}
            <tr>
                <td>{{ result.fullName }}</td>
                <td>{{ result.raceTime }}</td>
                <td>{{ result.placement }}</td>
                <td>
                    <a href="{{ path('app_results_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_results_new') }}">Create new</a>
{% endblock %}
