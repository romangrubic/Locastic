{% extends 'base.html.twig' %}

{% block title %}Results index{% endblock %}

{% block body %}

<div class="container w-50">
    <div class="text-center mt-5">
        <h1>{{ race.raceName }}</h1>
        <h3>{{ race.date|date("F jS \\a\\t g:ia")}}</h3>
    </div>
    <div class="text-center mt-2">
        <a class="btn btn-primary" href="{{ path('app_race_new') }}">Add new race</a>
    </div>
    <hr>
    <div class="m-5">
        <h4 class="fw-bold">Medium distance</h4>
        <p>Average: {{ avgMedium|trim('0', side='left') }} </p> 
        <table class="table table-hover border">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-center">Time</th>
                    <th class="text-center">Placement</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for result in allResults %}
                {% if result.distance == 'medium' %}
                <tr>
                    <td>{{ result.fullName }}</td>
                    <td class="text-center">{{ result.raceTime |trim('0', side='left') }}</td>
                    <td class="text-center">{{ result.placement }}</td>
                    <td class="p-1">
                        <a class="btn btn-success" href="{{ path('app_results_edit', {'id': result.id}) }}">Edit</a>
                    </td>
                </tr>
                {% endif %}
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>
    <div class="m-5">
        <h4 class="fw-bold">Long distance</h4>
        <p>Average: {{ avgLong|trim('0', side='left') }} </p> 
        <table class="table table-hover border">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-center">Time</th>
                    <th class="text-center">Placement</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for result in allResults %}
                {% if result.distance == 'long' %}
                <tr>
                    <td>{{ result.fullName }}</td>
                    <td class="text-center">{{ result.raceTime |trim('0', side='left') }}</td>
                    <td class="text-center">{{ result.placement }}</td>
                    <td  class="p-1">
                        <a class="btn btn-success" href="{{ path('app_results_edit', {'id': result.id}) }}">Edit</a>
                    </td>
                </tr>
                {% endif %}
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
